@page "/students"
@using BlazorComponents.Components.Classes
@using BlazorComponents.Models
@using BlazorComponents.Services

<h3>Students</h3>

<DataGrid Data="studentList" Columns="cols" />


@code {

    public List<Students> studentList { get; set; }
    public List<ColumnsList> cols { get; set; }

    protected override async Task OnInitializedAsync()
    {
        StudentsService std = new StudentsService();
        studentList = std.GetStudents();
        cols = std.GetStudentsHeaders();
    }

}
